@model National_Park_Blog.Models.Blog_Content
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="/CSS/FormsStyle.css" rel="stylesheet" />
</head>
<body>

    <h4>Blog_Content</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BlogContentName" class="control-label"></label>
                    <input asp-for="BlogContentName" class="form-control" />
                    <span asp-validation-for="BlogContentName" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="BlogContentText" class="control-label"></label>
                    <input asp-for="BlogContentText" class="form-control" />
                    <span asp-validation-for="BlogContentText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BlogContentDate" class="control-label"></label>
                    <input asp-for="BlogContentDate" class="form-control" />
                    <span asp-validation-for="BlogContentDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NationalParkId" class="control-label"></label>
                    <select asp-for="NationalParkId" class="form-control" asp-items="ViewBag.NationalParkId"></select>
                    <span asp-validation-for="NationalParkId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
