@model National_Park_Blog.Models.Blog_Content
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateByNationalParkID</title>
    <link href="~/CSS/FormsStyle.css" rel="stylesheet" />
</head>
<body>
<h1>Create New Blog Content</h1>

<h4>Enter your content below.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateByNationalParkID" class="FormsStyle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlogContentName" class="control-label"></label>
                <input asp-for="BlogContentName" class="form-control" />
                <span asp-validation-for="BlogContentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogContentText" class="control-label"></label>
                <input asp-for="BlogContentText" class="form-control" />
                <span asp-validation-for="BlogContentText" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="BlogContentDate" class="control-label"></label>
                <input asp-for="BlogContentDate" class="form-control" />
                <span asp-validation-for="BlogContentDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                @*<label asp-for="NationalParkId" class="control-label"></label>*@
                <input asp-for="NationalParkId" class ="form-control" value="@ViewBag.NationalParkId" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="FormGroup">
                <a href="/NationalParks/Details/@ViewBag.NationalParkId">Return to Park Page</a>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

</body>
</html>
