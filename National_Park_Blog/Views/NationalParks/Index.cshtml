@model IEnumerable<National_Park_Blog.Models.National_Parks>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>National Parks</title>
    <link href="~/CSS/IndexStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="headerinfo"></div>
    <h1>Get Out There! - An Adventure Blog</h1>
    <p>Discover what makes America's National Parks great. Checkout the blogs below or add your own content.</p>
    <div id="Blog_Content_Section">
        @foreach (var nationalPark in Model)
        {
            <article class="someName">

                <h3><a href="/NationalParks/Details/@nationalPark.Id">@nationalPark.Name</a></h3>
                <img src="@nationalPark.Image" alt="image# @nationalPark.Id" />
                <p>Park Location: @nationalPark.Location</p>
                <p>About this Park: @nationalPark.Description</p>
            </article>
        }
    </div>
</body>
</html>
